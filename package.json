{
	"name": "obsidian-wordwise-plugin",
	"version": "0.7.3",
	"private": true,
	"description": "Writing companion for AI content generation.",
	"license": "MIT",
	"author": "ckt1031",
	"main": "main.js",
	"scripts": {
		"build": "bun esbuild.config.ts production",
		"dev": "bun esbuild.config.ts",
		"format": "biome format . --write",
		"lint": "tsc --noEmit --skipLibCheck && biome check .",
		"lint:fix": "tsc --noEmit --skipLibCheck && biome check --apply .",
		"test": "vitest run",
		"version": "bun version-bump.ts && biome format manifest.json versions.json --write && git add manifest.json versions.json",
		"prepare": "husky || true",
		"lint-staged": "lint-staged"
	},
	"dependencies": {
		"@anthropic-ai/sdk": "0.19.1",
		"@google/generative-ai": "0.3.1",
		"cohere-ai": "7.9.1",
		"dayjs": "1.11.10",
		"fuse.js": "^7.0.0",
		"localforage": "1.10.0",
		"nanoid": "5.0.6",
		"openai": "4.32.1",
		"qrcode": "1.5.3",
		"rambda": "9.2.0",
		"slugify": "1.6.6",
		"snakecase-keys": "7.0.0",
		"valibot": "0.30.0"
	},
	"devDependencies": {
		"@biomejs/biome": "1.6.4",
		"@types/node": "20.12.3",
		"@types/qrcode": "1.5.5",
		"builtin-modules": "3.3.0",
		"esbuild": "0.20.2",
		"husky": "9.0.11",
		"lint-staged": "15.2.2",
		"obsidian": "1.5.7",
		"tslib": "2.6.2",
		"typescript": "5.4.3",
		"vitest": "1.4.0"
	},
	"lint-staged": {
		"*.{js,ts,mjs,cjs}": ["biome check && tsc"]
	}
}
